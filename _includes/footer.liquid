    </div>
    
    <!-- Connect -->
    <div class="footer-section">
      <h4>Connect</h4>
      <ul class="footer-links">
        <li><a href="mailto:contact@subhadipmitra.com">Email</a></li>
        <li><a href="https://calendly.com/contact-x9nm/30min" target="_blank">Schedule a Call</a></li>
        <li><a href="https://linkedin.com/in/subhadip-mitra" target="_blank">LinkedIn</a></li>
        <li><a href="https://github.com/bassrehab" target="_blank">GitHub</a></li>
      </ul>
    </div>
  </div>
  
