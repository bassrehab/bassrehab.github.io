    <div class="footer-social">
      <a href="https://linkedin.com/in/subhadip-mitra" target="_blank" aria-label="LinkedIn">
        <i class="fab fa-linkedin-in"></i>
      </a>
      <a href="https://github.com/bassrehab" target="_blank" aria-label="GitHub">
        <i class="fab fa-github"></i>
      </a>
      <a href="https://twitter.com/bassrehab" target="_blank" aria-label="Twitter">
        <i class="fab fa-twitter"></i>
      </a>
      <a href="mailto:contact@subhadipmitra.com" aria-label="Email">
        <i class="fas fa-envelope"></i>
      </a>
    </div>
  </div>
</div>
{% endcapture %}

{% if site.footer_fixed %}
  <footer class="modern-footer fixed-bottom" role="contentinfo">
    {{ footer_contents }}
  </footer>
{% else %}
  <footer class="modern-footer" role="contentinfo">
    {{ footer_contents }}
  </footer>
{% endif %}